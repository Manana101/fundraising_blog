<article class="post">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1><%= @post.title %></h1>
        <p><%= @post.content %></p>
        <%= image_tag post.image_url.to_s, alt: "Image", class: "img-responsive" %>
        <%= link_to "Edit", edit_post_path(@post) %>
        <%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
</article>
