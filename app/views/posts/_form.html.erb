<%= form_for @post, html: { multipart: true } do |f| %>

  <%= render 'shared/error_messages' %>

  <%= f.collection_select(:category_id, Category.all, :id, :name, { prompt: "Choose a category" }) %><br>
  <%= f.select :type, Post.type.options, { prompt: "Choose post type" } %><br>
  <%= f.label :title %><br>
  <%= f.text_field :title, placeholder: "Type the post title here" %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description, size: "60x12",
    placeholder: "Type short post description here (optional, max. 100 characters for full_width_image, max. 200 for half_width_image)" %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content, size: "60x12", placeholder: "Type the post content here (optional)" %><br>
  <%= f.label :image %><br>
  <%= f.file_field :image %><br>

  <%= f.submit %>

<% end %>
